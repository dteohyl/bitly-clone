<p>
This shortens your urls!
</p>

<form action= "/urls" method="post">
	Enter URL 
	<input type ="text" name="long_url">
	<input type="submit" value="Submit">
</form>

<table style="width:100%">
  <tr>
    <th>URL</th>
    <th>Short URL</th>
    <th>Clicks!</th>
  </tr>
 <% @urls.each do |url| %>
   <tr> 
   	<td><%= url.url%></td>
   	<td><a href="<%=url.short_url%>"><%= url.short_url%></a></td>
   	<td><%= url.click_count%></td>
   </tr>
 <% end %>
</table> 
